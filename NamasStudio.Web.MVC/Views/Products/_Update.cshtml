<div class="modal fade modal-update-product " id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div id="alert"></div>
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content" id="modal-width">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Update Product</h5>
            </div>
            <form>
                <div class="modal-body">
                    <div class="form-group row">
                        <div class="col-lg-6">
                            <input type="text" class="form-control" id="productIdU" hidden>
                            <div class="form-group row">
                                <div class="col text-left">
                                    <label class="col col-form-label fs-6">Product Name</label>
                                </div>
                                <div class="col modal-input ">
                                    <input type="text" class="form-control" id="productNameU">
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col text-left">
                                    <label class="col col-form-label fs-6">Category</label>
                                </div>
                                <div class="col modal-input">
                                    <select class="form-select fw-lighter fs-6" style="font-size:8px" id="productCategoryU" name="productCategoryU" aria-label="Default select example">
                                        <option value="">Select Category</option>
                                        @foreach (var category in Model.CategoryClassDropdown)
                                        {
                                            <option value="@category.Value">@category.Text</option>
                                        }
                                    </select>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col text-left">
                                    <label class="col col-form-label fs-6">Price</label>
                                </div>
                                <div class="col modal-input ">
                                    <input type="text" class="form-control" id="productPriceU">
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col text-left">
                                    <label class="col col-form-label fs-6">Weight</label>
                                </div>
                                <div class="col modal-input ">
                                    <input type="text" class="form-control" id="productWeightU">
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group row">
                                <div class="col text-left">
                                    <label class="col col-form-label fs-6">Fabric</label>
                                </div>
                                <div class="col modal-input ">
                                    <input type="text" class="form-control" id="productFabricU">
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col text-left">
                                    <label class="col col-form-label fs-6">Color</label>
                                </div>
                                <div class="col modal-input ">
                                    <input type="text" class="form-control" id="productColorU">
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col text-left">
                                    <label class="col col-form-label fs-6">Description</label>
                                </div>
                                <div class="col modal-input">
                                    <textarea type="text" class="form-control" id="productDescU" style="height: 100px"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary text-light btn-submit-update-product">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
