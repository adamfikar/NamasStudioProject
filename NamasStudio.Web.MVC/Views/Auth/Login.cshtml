@using NamasStudio.Web.MVC.Models.Auth
@model LoginViewModel

@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Login";
}



<div class="containerLogin">
     <div id="liveAlertPlaceholder"></div>
    <section class="text-center text-lg-start">
        <div class="container py-3">
            <div class="row g-0 align-items-center parentArea">
                <div class="col-lg-6 mb-4 loginArea">
                    <div class="card cascading-right" style="
                            background: hsla(0, 0%, 100%, 0.55);
                            backdrop-filter: blur(20px);
                        ">
                        <div class="card-body p-4 shadow-3 text-center">
                            <h2 class="fw-bold mb-4">Sign In</h2>
                            <form asp-action="Login" method="Post" class="login-form">
                                <div class="form-outline mb-3">
                                    <input asp-for="Dto.Username" class="form-control" name="username" id="username">
                                    <label class="form-label" for="username">Username</label>
                                    <span asp-validation-for="Dto.Username" class="text-danger"></span>
                                </div>
                                <div class="form-outline mb-3">
                                    <input asp-for="Dto.Password" class="form-control" name="password" type="password" id="password">
                                     <span asp-validation-for="@Model.Dto.Password" class="text-danger"></span>
                                    <label class="form-label" for="password">Password</label>
                                </div>
                                <button type="submit" class="btn btn-primary btn-block mb-3 text-light" id="btn-submit-login">
                                    Sign in
                                </button>
                                <div class="text-center">
                                    <p>Don't have an account? <a class="signUpBtn" id="signUpLink">Sign Up</a></p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 mb-4 registerArea">
                    @await Html.PartialAsync("_Register")
                </div>

                <div class="col-lg-6 mb-4 d-lg-block d-none">
                    <img src="https://mdbootstrap.com/img/new/ecommerce/vertical/004.jpg" class="w-100 rounded-4 shadow-3" alt="" />
                </div>
            </div>
        </div>
    </section>
</div>








