
<div class="modal fade modal-productStock" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div id="liveAlertPlaceholder"></div>
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Insert Size</h5>
            </div>
            <form>
                <div class="modal-body">
                    <input type="text" class="form-control" id="productId" value="@Model.Product.ProductId" hidden>
                    <div class="form-group row">
                        <div class="col text-center">
                            <label class="col col-form-label fs-6">Size Name</label>
                        </div>
                        <div class="col modal-input">
                            <select class="form-select fw-lighter fs-6" style="font-size:8px" id="sizeName" name="sizeName" aria-label="Default select example">
                                <option value="">Select Category</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col text-center">
                            <label class="col col-form-label fs-6">Stock</label>
                        </div>
                        <div class="col modal-input ">
                            <input type="number" class="form-control" id="stock">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary text-light btn-productStock-submit">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>